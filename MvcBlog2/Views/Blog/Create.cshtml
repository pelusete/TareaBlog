@model MvcBlog2.Models.mPost

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Crear nuevo Post</legend>

        <img src="@Url.Content(@Model.Imagen)" alt="Imagen del Post" width="300" height="200" />
        <br />
        <b>Subir Imagen</b><br /> 
        <input type="file" name="post_Imagen" style="width: 300px" /><br />

        <b>Titulo</b><br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <b>Descripción</b><br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <b>Tags (separados por coma)</b><br />
        <div class="editor-field">
            <input type="text" name="Tags" value=""/>
        </div>

        <b>Autor</b><br />
        <div class="editor-field">
            @Html.EditorFor(model => model.NombreAutor)
            @Html.ValidationMessageFor(model => model.NombreAutor)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
